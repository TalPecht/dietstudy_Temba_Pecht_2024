  print(i)

  list_sig_dream_ruraldiet_ctr[[i]] <- split(
    subset(res_dream_ruraldiet_ctr, regulation != "ns" & comparison == i)$protein,
     subset(res_dream_ruraldiet_ctr, regulation != "ns" & comparison == i)$regulation
    )

}

